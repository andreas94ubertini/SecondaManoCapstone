                                     data-mdb-ripple-color="light">
                                    <img src="~/Content/assets/productsImgs/@p.Img1"
                                         class="w-100" />
                                    <a href="#!">
                                        <div class="mask">
                                            <div class="d-flex justify-content-start align-items-end h-100">
                                                <h5><span class="badge bg-dark ms-2">@p.Categories.Name</span></h5>
                                            </div>
                                        </div>
                                        <div class="hover-overlay">
                                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                        </div>
                                    </a>
                                </div>*@
                               
                                    <img src="~/Content/assets/productsImgs/@p.Img1"
                                          />
                                
                                
                                <div class="card-body">
                                    <a href="" class="text-reset">
                                        <h5 class="card-title mb-2">@p.Name</h5>
                                    </a>
                                    <a href="" class="text-reset ">
                                        <p>Venduto da: @p.Users.Username</p>
                                    </a>
                                    <h6 class="mb-3 price">@String.Format("{0:0.00 €}", p.Price)</h6>
                                    <a href="/Post/ProductDetails/@p.IdProduct" class="btn btn-success w-100">Vedi</a>
                                </div>
                            </div>
                        </div>

                    }

                }
            </div>
        }

        <!-- Categoria -->

    </div>
</main>
